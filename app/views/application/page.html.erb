<div id="angularApp" ng-app="pageApp"  ng-controller="PageCtrl"  >
	<div class="container-fluid">
		<div class="col-md-10 col-sm-9 small-padding"> 
			<div class="panel panel-default small-margin">
				<div class="panel-heading">
					<h2>Front-end Programming Challenge</h2>
				</div>
				<div class="panel-body">
					<div class="row">
					  <div class="col-md-12">
					  	<form role="form">
						  <div class="form-group">
						    <label for="recipients">Recipients</label>
						    <input type="text" data-role="tagsinput" class="form-control" id="recipients" placeholder="Enter recipients" ng-model="recipients">
						  </div>
						  <div class="form-group">
						  	<label for="message">Message</label>
						    <textarea class="form-control" id="message" placeholder="Message up to 140 characters" ng-model="message" maxlength="140"></textarea>
						  </div>
						  <span class="submit-container"><b>{{140-message.length}}</b><button type="submit" class="btn btn-default" ng-click='send_message()'>Send</button></span>
						</form>
					  </div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>







